{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "no-restricted-syntax": "off",
        "no-nested-ternary": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-continue": "off"
    }
}
